{
  "manifest_version": 2,
  "name": "Close Right Tabs",
  "version": "1.0.0",
  "description": "右側にあるタブをすべて閉じます。",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "browser_action": {
    "default_title": "右側にあるタブをすべて閉じます。",
    "default_icon": "icon_19.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs"
  ]
}
